# ipatool-web Docker Environment Configuration
# Copy this file to .env and customize for your deployment

# Public hostname for manifest URLs (important for OTA installation)
# Format: domain:port or IP:port
# Example: ipatool.example.com:443
PUBLIC_HOSTNAME=ipatool-web:443

# Backend configuration
BACKEND_PORT=443
REDIRECT_PORT=4000

# Frontend configuration (if backend is on different host/port)
# Leave empty to use defaults (localhost:443)
REACT_APP_BACKEND_HOST=localhost
REACT_APP_BACKEND_PORT=443

# Or use full API URL (overrides HOST and PORT)
# REACT_APP_API_URL=https://ipatool.example.com:443/api

# Node environment
NODE_ENV=production
